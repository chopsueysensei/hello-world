        <tr>
            <th>Start</th>
            <th>End</th>
            <th>Total</th>
        </tr>
        <tr>
            <td>{{start}}</td>
            <td>{{end}}</td>
            <td>{{total}}</td>
        </tr>
    </table>
    {{/weekday}}
    
    <h1>Total</h1>
    {{total_hours}}

</body>
