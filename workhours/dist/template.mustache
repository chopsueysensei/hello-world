<html>
<body>
    <h1>Today</h1>
    <table>
        <tr>
            <th>Start</th>
            <th>Current</th>
            <th>Total</th>
        </tr>
        <tr>
            <td>{{today_start}}</td>
            <td>{{today_current}}</td>
            <td>{{today_total}}</td>
        </tr>
    </table>
    
    <h1>Week</h1>
    {{#weekday}}
